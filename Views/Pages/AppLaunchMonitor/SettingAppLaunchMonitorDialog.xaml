<ui:FluentWindow x:Class="Tools.Views.Pages.AppLaunchMonitor.SettingAppLaunchMonitorDialog"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 xmlns:extensions="clr-namespace:Tools.Extensions"
                 xmlns:converters="clr-namespace:Tools.Converters"
                 xmlns:models="clr-namespace:Tools.Models"
                 xmlns:viewModel="clr-namespace:Tools.ViewModel.AppLaunchMonitor"
                 mc:Ignorable="d"
                 Title="SettingAppLaunchMonitorDialog"
                 MaxHeight="300"
                 MaxWidth="330"
                 MinHeight="300"
                 MinWidth="330"
                 ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
                 ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                 d:DataContext="{d:DesignInstance viewModel:SettingAppLaunchMonitorViewModel}"
                 WindowStartupLocation="CenterOwner"
                 ShowInTaskbar="False">
    <ui:FluentWindow.Resources>
        <converters:EnumDescriptionConverter x:Key="EnumDescriptionConverter" />
        <extensions:EnumBindingSource x:Key="TimeUnitEnumSource" EnumType="{x:Type models:TimeUnit}" />
    </ui:FluentWindow.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!-- 标题 -->
        <ui:TextBlock Grid.Row="0" Text="App启动监视相关设置" FontTypography="BodyStrong" Margin="0,0,0,5" />

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <!-- App启动监视相关设置 -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                <ui:NumberBox Value="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                              PlaceholderText="输入时间" Width="100" TextAlignment="Center" ClearButtonEnabled="False"
                              SpinButtonPlacementMode="Hidden" />
                <ComboBox SelectedItem="{Binding Unit}"
                          ItemsSource="{Binding Source={StaticResource TimeUnitEnumSource}}"
                          Margin="10,0,0,0" Width="80">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource EnumDescriptionConverter}}"
                                       TextAlignment="Center" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>

            <!-- 偏移时间说明 -->
            <ui:TextBlock Grid.Row="1" Text="此选项将设置每天的偏移时间，系统将判定当天的 0点+偏移时间 为下一天的开始" TextWrapping="Wrap"
                          Margin="0,10,0,5" Foreground="{DynamicResource TextFillColorDisabledBrush}"
                          FontTypography="Caption" FontSize="14" />

            <!-- 帧率设置 -->
            <ui:NumberBox Grid.Row="3" Value="{Binding Fps }"
                          SpinButtonPlacementMode="Hidden" ClearButtonEnabled="False" Width="150"
                          PlaceholderText="请输入帧率" TextAlignment="Center" />

            <!-- 实时预览帧率说明 -->
            <ui:TextBlock Grid.Row="4" Text="此选项将设置设置界面的实时预览帧率，范围10-60，默认为30帧，高帧率可能会导致电脑卡顿" TextWrapping="Wrap"
                          Margin="0,10,0,5" Foreground="{DynamicResource TextFillColorDisabledBrush}"
                          FontTypography="Caption" FontSize="14" />
        </Grid>

        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <!-- 操作按钮 -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                <ui:Button Content="恢复默认" Command="{Binding ResetCommand}" />
            </StackPanel>

            <!-- 反馈按钮 -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <ui:Button Content="取消" Command="{Binding CancelCommand}" Margin="0,0,10,0" />
                <ui:Button Content="保存" Command="{Binding SaveCommand}" Appearance="Primary" />
            </StackPanel>
        </Grid>
    </Grid>
</ui:FluentWindow>
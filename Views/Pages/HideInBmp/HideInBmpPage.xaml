<Page x:Class="Tools.Views.Pages.HideInBmp.HideInBmpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:converters="clr-namespace:Tools.Converters"
      xmlns:viewModel="clr-namespace:Tools.ViewModel.HideInBmpPage"
      xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:behaviors="clr-namespace:Tools.Behaviors"
      mc:Ignorable="d"
      d:DesignHeight="550"
      d:DesignWidth="692"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      d:DataContext="{d:DesignInstance Type=viewModel:HideInBmpViewModel}"
      Title="HideInBmp">
    <Page.Resources>
        <converters:ProgressToPercentConverter x:Key="ProgressToPercentConverter" />
        <converters:BooleanToVisibleConverter x:Key="BooleanToVisibleConverter" />
        <converters:LongToFileSizeConverter x:Key="LongToFileSizeConverter" />
    </Page.Resources>
    <Grid Margin="42, 16">
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,10">
                <ui:SymbolIcon Symbol="ImageAltText20"
                               Filled="True"
                               FontSize="24"
                               Margin="0,0,12,0"
                               Foreground="#4CAF50" />

                <ui:TextBlock Text="{Binding HideInBmpPageTitle}"
                              FontTypography="Title"
                              VerticalAlignment="Center"
                              FontSize="24"
                              Foreground="#FFFFFF" />
            </StackPanel>
            <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,0,16">
                <ui:Button Icon="{ui:SymbolIcon Settings16, FontSize=22, Filled=True}"
                           Width="42"
                           Height="42"
                           Background="Transparent"
                           BorderBrush="Transparent"
                           Command="{Binding SettingProgressModeCommand}"
                           Margin="5, 0" />
            </StackPanel>
        </Grid>

        <!-- 图片浏览区域 -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- 原图浏览 -->
            <GroupBox Grid.Column="0" Header="图片浏览(原图)" Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                      Margin="0,0,5,0">
                <Grid Margin="10">
                    <ui:Image Source="{Binding BmpPath, Mode=OneWay}" MaxHeight="400" Margin="5" Stretch="Uniform" />
                </Grid>
            </GroupBox>

            <!-- 输出图浏览 -->
            <GroupBox Grid.Column="1" Header="图片浏览(输出图)" Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                      Margin="5,0,0,0">
                <Grid Margin="10">
                    <ui:Image Source="{Binding OutputBmpPath}" MaxHeight="400" Margin="5" Stretch="Uniform" />
                </Grid>
            </GroupBox>
        </Grid>

        <!-- 文件选择区域 -->
        <Grid Grid.Row="2" Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- 隐藏/提取目标Bmp文件 -->
            <GroupBox Grid.Row="0" Grid.Column="0" Header="隐藏/提取目标目标文件(仅限BMP图片)"
                      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                      Margin="0,0,5,0" Background="Transparent">
                <b:Interaction.Behaviors>
                    <behaviors:DropFileOrFolderBehavior FilePath="{Binding BmpPath, Mode=OneWayToSource}"
                                                        OnlyBmp="True" />
                </b:Interaction.Behaviors>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5,0,0,0">
                        <ui:TextBlock Text="原始文件大小：" Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                      VerticalAlignment="Center" Margin="5,0,0,0" />
                        <ui:TextBlock Text="{Binding BmpSize, Converter={StaticResource LongToFileSizeConverter}}"
                                      Foreground="{DynamicResource TextFillColorPrimaryBrush}" Margin="5"
                                      ToolTipService.Placement="Top" ToolTipService.InitialShowDelay="100"
                                      ToolTipService.ToolTip="{Binding BmpSize, Converter={StaticResource LongToFileSizeConverter}, ConverterParameter=True}" />
                    </StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <ui:TextBox Grid.Column="0" Text="{Binding BmpPath}"
                                    ClearButtonEnabled="False"
                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}" Margin="5" />
                        <ui:Button Grid.Column="1" Content="浏览" Command="{Binding SelectBmpPathCommand}" Margin="5" />
                    </Grid>
                </StackPanel>
            </GroupBox>

            <!-- 隐藏文件 -->
            <GroupBox Grid.Row="1" Grid.Column="0" Header="隐藏文件"
                      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                      Margin="0,0,5,0" Background="Transparent">
                <b:Interaction.Behaviors>
                    <behaviors:DropFileOrFolderBehavior FilePath="{Binding FileToHidePath, Mode=OneWayToSource}" />
                </b:Interaction.Behaviors>
                <StackPanel>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5,0,0,0">
                            <ui:TextBlock Text="隐藏文件大小：" VerticalAlignment="Center"
                                          Foreground="{DynamicResource TextFillColorPrimaryBrush}" Margin="5,0,0,0" />
                            <ui:TextBlock
                                Text="{Binding FileToHideSize, Converter={StaticResource LongToFileSizeConverter}}"
                                Foreground="{DynamicResource TextFillColorPrimaryBrush}" Margin="5"
                                ToolTipService.Placement="Top" ToolTipService.InitialShowDelay="100"
                                ToolTipService.ToolTip="{Binding FileToHideSize, Converter={StaticResource LongToFileSizeConverter}, ConverterParameter=True}" />
                        </StackPanel>
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5,0,0,0">
                            <ui:TextBlock Text="最大可隐藏文件大小：" VerticalAlignment="Center"
                                          Foreground="{DynamicResource TextFillColorPrimaryBrush}" Margin="5,0,0,0" />
                            <ui:TextBlock
                                Text="{Binding MaxHideSize, Converter={StaticResource LongToFileSizeConverter}}"
                                Foreground="{DynamicResource TextFillColorPrimaryBrush}" Margin="5"
                                ToolTipService.Placement="Top" ToolTipService.InitialShowDelay="100"
                                ToolTipService.ToolTip="{Binding MaxHideSize, Converter={StaticResource LongToFileSizeConverter}, ConverterParameter=True}" />
                        </StackPanel>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <ui:TextBox Grid.Column="0" Text="{Binding FileToHidePath}" ClearButtonEnabled="False"
                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}" Margin="5"
                                    AllowDrop="True" />
                        <ui:Button Grid.Column="1" Content="浏览" Command="{Binding SelectFileToHidePathCommand}"
                                   Margin="5" AllowDrop="True" />
                    </Grid>
                </StackPanel>
            </GroupBox>

            <!-- 输出文件夹 -->
            <GroupBox Grid.Row="0" Grid.Column="1" Header="输出文件夹"
                      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                      Margin="5,0,0,0" Background="Transparent">
                <b:Interaction.Behaviors>
                    <behaviors:DropFileOrFolderBehavior FilePath="{Binding OutputFolderPath, Mode=OneWayToSource}"
                                                        IsFolder="True" />
                </b:Interaction.Behaviors>
                <StackPanel VerticalAlignment="Center">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <ui:TextBox Grid.Column="0" Text="{Binding OutputFolderPath}" ClearButtonEnabled="False"
                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}" Margin="5" />
                        <ui:Button Grid.Column="1" Content="浏览" Command="{Binding SelectOutputFolderCommand}"
                                   Margin="5" />
                    </Grid>
                </StackPanel>
            </GroupBox>

            <!-- 进度加载条 -->
            <GroupBox Grid.Row="1" Grid.Column="1" Header="隐写/校验/提取进度"
                      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                      Margin="5,0,0,0">
                <Grid>
                    <StackPanel VerticalAlignment="Center"
                                Visibility="{Binding IsPercentMode, Converter={StaticResource BooleanToVisibleConverter}}">
                        <ui:TextBlock TextAlignment="Center"
                                      Text="{Binding HideOrVerifyOrExtractProgress, Converter={StaticResource ProgressToPercentConverter}}" />
                        <ProgressBar Height="35" Margin="5" Value="{Binding HideOrVerifyOrExtractProgress}"
                                     Foreground=" #4CDF50" Minimum="0.0" Maximum="1.0" />
                    </StackPanel>
                    <StackPanel VerticalAlignment="Center"
                                Visibility="{Binding IsTextMode, Converter={StaticResource BooleanToVisibleConverter}}">
                        <ui:TextBlock TextAlignment="Center" Text="{Binding HideOrVerifyOrExtractText}"
                                      TextWrapping="Wrap" Margin="10" />
                    </StackPanel>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- 操作按钮 -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5">
            <ui:Button Content="隐写" Command="{Binding StartHideCommand}" IsEnabled="{Binding NotExecuting}" Margin="5"
                       Width="80" />
            <ui:Button Content="校验" Command="{Binding VerifyCommand}" IsEnabled="{Binding NotExecuting}" Margin="5"
                       Width="80" />
            <ui:Button Content="提取" Command="{Binding StartExtractCommand}" IsEnabled="{Binding NotExecuting}"
                       Margin="5" Width="80" />
        </StackPanel>
    </Grid>
</Page>
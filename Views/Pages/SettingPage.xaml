<Page x:Class="Tools.Views.Pages.SettingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:extensions="clr-namespace:Tools.Extensions"
      xmlns:converters="clr-namespace:Tools.Converters"
      xmlns:viewModel="clr-namespace:Tools.ViewModel.SettingPage"
      xmlns:models="clr-namespace:Tools.Models"
      mc:Ignorable="d"
      d:DesignHeight="1550"
      d:DesignWidth="600"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      d:DataContext="{d:DesignInstance Type=viewModel:SettingPageViewModel}"
      Title="SettingPage">
    <Page.Resources>
        <converters:EnumDescriptionConverter x:Key="EnumDescriptionConverter" />
        <extensions:EnumBindingSource x:Key="EnumBindingSource" EnumType="{x:Type models:ExitMode}" />
    </Page.Resources>
    <StackPanel Margin="42,16">
        <ui:TextBlock
            Margin="0,0,0,8"
            FontTypography="Subtitle"
            Text="设置" />
        <!-- 启动页面选项 -->
        <ui:CardControl Margin="0,0,0,12" Icon="{ui:SymbolIcon Window24}">
            <ui:CardControl.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <ui:TextBlock Grid.Row="0"
                                  Grid.Column="0"
                                  FontTypography="Body"
                                  Text="启动默认页面"
                                  TextWrapping="Wrap" />
                    <ui:TextBlock Grid.Row="1"
                                  Grid.Column="0"
                                  Foreground="{ui:ThemeResource TextFillColorTertiaryBrush}"
                                  Text="下次启动时自动打开的工具"
                                  TextWrapping="Wrap" />
                    <ComboBox Grid.Row="0"
                              Grid.RowSpan="2" Grid.Column="1"
                              Margin="0,0,36,0"
                              MinWidth="120"
                              ItemsSource="{Binding AvailblePages}"
                              DisplayMemberPath="DisplayName"
                              SelectedValuePath="PageType"
                              SelectedValue="{Binding StartPageType}" />
                </Grid>
            </ui:CardControl.Header>
        </ui:CardControl>

        <!-- 退出选项 -->
        <ui:CardControl Margin="0,0,0,12" Icon="{ui:SymbolIcon ArrowExit20}">
            <ui:CardControl.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <ui:TextBlock Grid.Row="0"
                                  Grid.Column="0"
                                  FontTypography="Body"
                                  Text="退出选项"
                                  TextWrapping="Wrap" />
                    <ui:TextBlock Grid.Row="1"
                                  Grid.Column="0"
                                  Foreground="{ui:ThemeResource TextFillColorTertiaryBrush}"
                                  Text="设置点击退出按钮的退出选项"
                                  TextWrapping="Wrap" />
                    <ComboBox Grid.Row="0"
                              Grid.RowSpan="2" Grid.Column="1"
                              Margin="0,0,36,0"
                              MinWidth="120"
                              SelectedValue="{Binding ExitMode}"
                              ItemsSource="{Binding Source={StaticResource EnumBindingSource}}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <ui:TextBlock Text="{Binding Converter={StaticResource EnumDescriptionConverter}}"
                                              TextAlignment="Center" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </Grid>
            </ui:CardControl.Header>
        </ui:CardControl>

        <Separator Margin="0,4,0,4" />

        <ui:TextBlock
            Margin="0,8,0,8"
            FontTypography="Subtitle"
            Text="关于" />

        <!-- 关于选项 -->
        <ui:CardControl Margin="0,0,0,12" Icon="{ui:SymbolIcon Info24}">
            <ui:CardControl.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <ui:TextBlock Grid.Row="0"
                                  Grid.Column="0"
                                  FontTypography="Body"
                                  Text="关于「各种工具」"
                                  TextWrapping="Wrap" />
                    <ui:TextBlock Grid.Row="1" Grid.Column="0"
                                  Foreground="{ui:ThemeResource TextFillColorTertiaryBrush}"
                                  Text="查看软件信息"
                                  TextWrapping="Wrap" />
                </Grid>
            </ui:CardControl.Header>
            <ui:Button Margin="0,0,36,0"
                       Command="{Binding OpenAboutWindowCommand}"
                       Content="查看" />
        </ui:CardControl>

        <!-- 软件日志 -->
        <ui:CardExpander Icon="{ui:SymbolIcon SlideText48}">
            <ui:CardExpander.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <ui:TextBlock Grid.Row="0"
                                  Grid.Column="0"
                                  FontTypography="Body"
                                  Text="软件日志"
                                  TextWrapping="Wrap" />
                    <ui:TextBlock Grid.Row="1"
                                  Grid.Column="0"
                                  Foreground="{ui:ThemeResource TextFillColorTertiaryBrush}"
                                  Text="查看本软件的日志(与Log文件夹下的文件一致)"
                                  TextWrapping="Wrap" />
                    <ui:Button Grid.Row="0"
                               Grid.RowSpan="2"
                               Grid.Column="1"
                               Margin="0,0,20,0"
                               Command="{Binding OpenLogFolderCommand}"
                               Content="打开日志文件夹" />
                </Grid>
            </ui:CardExpander.Header>
            <Grid>
                <ui:RichTextBox x:Name="LogTextBox" MaxHeight="600" Margin="0,0,0,12" Padding="0,5,0,0" FontSize="11"
                                Background="#3A3F47" IsReadOnly="True" />
            </Grid>
        </ui:CardExpander>
    </StackPanel>
</Page>